{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"local>CPS-IT/renovate-config",
		"local>CPS-IT/renovate-config:typo3-extension"
	],
	"assignees": [
		"eliashaeussler"
	],
	"baseBranches": [
		"main",
		"0.8.x"
	],
	"packageRules": [
		{
			"matchFileNames": [
				"composer.json"
			],
			"constraints": {
				"php": "8.1.*"
			}
		},
		{
			"matchFileNames": [
				"Resources/Private/Libs/Build/composer.json"
			],
			"constraints": {
				"php": "7.4.*"
			}
		}
	]
}
